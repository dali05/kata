pipeline {
    agent { label 'Jenkins-Agent' }
    tools {
        jdk 'Java17'
        maven 'Maven3'
    }

    stages {
        stage("Cleanup Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Checkout from SCM") {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/dali05/kata'
            }
        }

        stage('Run Backend Jenkinsfile') {
            steps {
                script {
                    // Charger le Jenkinsfile du backend et l'ex√©cuter
                    def backendPipeline = load 'backend/Jenkinsfile'
                    backendPipeline.call()
                }
            }
        }

        stage("Build Backend Application") {
            steps {
                dir('backend') {
                    sh "mvn clean package"
                }
            }
        }

        stage("Test Backend Application") {
            steps {
                dir('backend') {
                    sh "mvn test"
                }
            }
        }
    }
}